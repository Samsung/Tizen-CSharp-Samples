<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarComponent.Tizen.TV.Views.CalendarPage"
             NavigationPage.HasBackButton="False"
             Title="Calendar">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="VerticalOptions"
                        Value="FillAndExpand" />
                <Setter Property="HorizontalOptions"
                        Value="FillAndExpand" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Spacing="0" Padding="50">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25" />
                <ColumnDefinition Width="0.75" />
            </Grid.ColumnDefinitions>
            <StackLayout Grid.Column="0" HeightRequest="340"
                         VerticalOptions="Start">
                <AbsoluteLayout HorizontalOptions="FillAndExpand"
                                VerticalOptions="FillAndExpand"
                                AbsoluteLayout.LayoutFlags="All">
                    <Image Source="{Binding ImageFilename}"
                           AbsoluteLayout.LayoutBounds="172, 46, 176, 194" />
                    <Label FontSize="76"
                           TextColor="#ffffff"
                           FontAttributes="Bold"
                           Text="{Binding DayName}"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center"
                           VerticalOptions="Fill"
                           HorizontalOptions="Fill"
                           AbsoluteLayout.LayoutBounds="111, 250, 300, 50" />
                </AbsoluteLayout>
            </StackLayout>
            <StackLayout Grid.Column="1"
                         HeightRequest="830"
                         VerticalOptions="EndAndExpand"
                         Padding="0">
                <StackLayout x:Name="CalendarWrapper" />
            </StackLayout>
        </Grid>
        <Grid Padding="24, 12, 24, 12"
              ColumnSpacing="24"
              VerticalOptions="EndAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="104" />
            </Grid.RowDefinitions>
            <Button Text="Previous Year"
                    Grid.Column="0"
                    Command="{Binding GoPrevYear}" />
            <Button Text="Today"
                    Grid.Column="1"
                    Command="{Binding GoToday}" />
            <Button Text="Next Year"
                    Grid.Column="2"
                    Command="{Binding GoNextYear}" />
        </Grid>
    </StackLayout>
</ContentPage>